<%= form_for(@user) do |f| %>
  <div class="form-control">
    <%= f.label(:name) %>
    <%= f.text_field(:name) %>
  </div>
  <div class="form-control">
    <%= f.label(:age) %>
    <%= f.text_field (:age) %>
  </div>
  <div class="form-control">
    <%= f.label(:email) %>
    <%= f.email_field(:email) %>
  </div>
  <div class="form-control">
    <%= f.label(:password) %>
    <%= f.password_field (:password) %>
  </div>
  <div class="form-control">
    <%= f.label(:password_confirmation) %>
    <%= f.password_field(:password_confirmation) %>
  </div>
  <%=f.submit('Sign Up', class: 'btn btn-info') %>
<% end %>